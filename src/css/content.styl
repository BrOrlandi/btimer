
@import './mediaqueries.styl';

html, body {
  margin: 0;
  height: 100vh;
  background-color: white;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
}

#timerDisplay {
  display: flex;
  flex-grow: 1;
  align-items: center;
  padding-top: 3.2vw;
  cursor: pointer;

  span {
    display: inline-block;
    width: 10vw;
    text-align: center;
  }

}

.timerFont {
  user-select: none;
  font-size: 10vw;
}

.buttons {
  user-select: none;
  display: flex;
  flex-direction: row;
  width: 100%;
  letter-spacing: 3px

  div {
    flex: 1;
    flex-grow: 1;
    padding: 5vh 1.5vw;
    text-align: center;
    cursor: pointer;

    .title {
      display: block;
      font-size: 12vh;
    }

    .sub {
      display: block;
      margin-top: 3px;
      font-size: 5vh;

      @media $height150 {
        display: none;
      }
    }
   }

  @media $portrait {
    flex-direction: column;

    div {
      padding: 5vh 1.5vw;

      .title {
        font-size: 10vw;
      }

      .sub {
        display: none;
      }
    }

  }
}

.hide {
  display: none !important;
}

#timerEdit {
  flex-grow: 1;
  display: flex;
  align-items: center;
}

#timerInput {
  text-align: center;
  width: 66vw;
}

header {
  width: 100vw;
  text-align: center;
  font-size: 30px;
  padding: 15px 0px 10px;
}